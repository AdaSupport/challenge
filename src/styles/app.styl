$background = #7a8998;
$black = #212a33;
$darkgrey = #abaaaa;
$lightgrey = #e4e4e4;
$blue = #347ab9;
$red = red;
$green = #2ad242;

* {
  box-sizing: border-box;
}

body {
  background: $background;
  font-family: 'Open Sans';
}

#app {
  width: 50%;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 6px;

  @media only screen and (max-width: 900px) {
    width: 80%;
  }

  @media only screen and (max-width: 600px) {
    width: 100%;
  }

  header {
    position: relative;
    background: $black;
    color: #FFF;
    text-align: center;
    font-size: 30px;
    border-left: 3px solid transparent;
    line-height: 55px;
  }

  input {
    width: 100%;
    color: grey;
    font-size: 20px;
    text-align: center;
    line-height: 40px;
    outline: none;
    border: none;
    background: $lightgrey;
  }

  ul {
    margin: 0;
    padding: 0;

    li {
      position: relative;
      background: #FFF;
      padding: 15px 50px;
      line-height: 20px;
      transition: all 0.3s ease;
      border-bottom: 1px solid $lightgrey;
      border-left: 3px solid transparent;

      &.completed {
        color: $darkgrey;
        text-decoration: line-through;
      }

      &:hover {
        border-left: 3px solid $blue;
      }

      &:hover > .delete {
        visibility: visible;
      }
    }
  }
}

.checkbox {
  position: absolute;
  width: 25px;
  height: 25px;
  top: 50%;
  left: 10px;
  background: $lightgrey;
  border: 1px solid $darkgrey;
  transform: translateY(-50%);
  cursor: pointer;

  &:after {
    opacity: 0.2;
    content: '';
    position: absolute;
    width: 9px;
    height: 5px;
    background: transparent;
    top: 6px;
    left: 7px
    border: 3px solid $black;
    border-top: 0;
    border-right: 0;
    transform: rotate(-45deg);
  }

  &:hover::after {
    opacity: 1;
  }

  &.checked {
    background: transparent;
    border: 0;

    &::after {
      opacity: 1;
    }
  }

  &.all {
    height: 30px;
    width: 35px;
    background: transparent;
    border: 0;

    &::after {
      opacity: 1;
      width: 17px;
      height: 9px;
      border: 4px solid $green;
      border-top: 0;
      border-right: 0;
    }

    &:hover::after {
      border: 4px solid $green - 20%;
      border-top: 0;
      border-right: 0;
    }
  }
}

.add {
  background: #347ab9;
  text-align: center;
  font-size: 28px;
  line-height: 40px;
  transition: all 0.2s ease;
  cursor: pointer;

  &:hover {
    background: $blue - 20%;
  }
}

.delete {
  position: absolute;
  visibility: hidden;
  color: $black;
  font-size: 23px;
  top: 50%;
  right: 20px;
  transform: translateY(-50%);
  cursor: pointer;

  &:after {
    content: 'Ã—';
  }

  &.all {
    visibility: visible;
    color: $red;
    font-size: 35px;
    font-weight: 700;

    &:hover {
      color: $red - 20%;
    }
  }
}
